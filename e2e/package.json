{
  "private": true,
  "name": "rsbuild-plugin-rsc-e2e",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" playwright test",
    "test:headed": "NODE_OPTIONS=\"--experimental-vm-modules\" playwright test --headed",
    "test:debug": "NODE_OPTIONS=\"--experimental-vm-modules\" playwright test --headed --debug --timeout=30000",
    "test:server": "NODE_OPTIONS=\"--experimental-vm-modules\" playwright test cases/examples/server.test.ts --headed --debug --timeout=30000",
    "test:server:ui": "NODE_OPTIONS=\"--experimental-vm-modules\" playwright test cases/examples/server.test.ts --ui",
    "test:ui": "NODE_OPTIONS=\"--experimental-vm-modules\" playwright test --ui"
  },
  "devDependencies": {
    "@e2e/helper": "workspace:*",
    "@rsbuild/core": "^2.0.0-alpha.3",
    "@rsbuild/plugin-react": "^1.4.2",
    "@types/express": "^5.0.6",
    "@types/webpack-env": "^1.18.8",
    "rsbuild-plugin-rsc": "workspace:*",
    "srvx": "^0.9.8"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
